rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to create and read their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write books
    match /books/{bookId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write chats
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write messages
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write swaps
    match /swaps/{swapId} {
      allow read, write: if request.auth != null;
    }
  }
}